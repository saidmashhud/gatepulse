[
  {hl_api, [
    {port, 8080},
    {listen_addr, "0.0.0.0"}
  ]},
  {hl_store_client, [
    {socket_path, "/tmp/hl_store.sock"},
    {pool_size, 8}
  ]},
  {hl_delivery, [
    {poll_interval_ms, 1000},
    {workers, 16},
    {claim_count, 20},
    {lease_secs, 30}
  ]},
  {kernel, [
    {logger_level, info},
    {logger, [
      {handler, default, logger_std_h, #{
        config => #{type => standard_io},
        formatter => {logger_formatter, #{
          template => [time, " [", level, "] ", msg, "\n"]
        }}
      }}
    ]}
  ]},
  {prometheus, [
    {collectors, [
      prometheus_boolean,
      prometheus_counter,
      prometheus_gauge,
      prometheus_histogram,
      prometheus_summary
    ]}
  ]},
  {hl_ws, [
    {enabled, true},
    {max_connections, 10000}
  ]},
  {hl_presence, [
    {enabled, true},
    {ttl_secs, 300}
  ]}
].
